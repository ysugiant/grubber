<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FoodPageActivity" >

    <ScrollView
        android:id="@+id/.foodPage_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            style="@style/LoginFormContainer"
            android:layout_width="match_parent"
            android:layout_height="395dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|right"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/foogpage_foodNameTV"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1.22"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <ImageView
                    android:id="@+id/foogpage_foodimgIV"
                    android:layout_width="140dp"
                    android:layout_height="77dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_input_add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/foodpage_voteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Vote" />

                <EditText
                    android:id="@+id/foodpage_commentET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/foodpage_totalVoteNumTV"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="324" />

                <ImageView
                    android:id="@+id/foogpage_voteicon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/foodpage_totalVoteNumTV"
                    android:layout_weight="0.93"
                    android:src="@drawable/vote" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/foodpage_reviewTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="3.60"
                android:orientation="vertical" >

                <ListView
                    android:id="@+android:id/foogpage_reviewList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/foodpage_reviewMoreTV"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="2.07"
                android:clickable="true"
                android:text="More" 
               
                android:textSize="20dp"/>
            
        </LinearLayout>

    </ScrollView>

</merge>