<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewRestaurantActivity" >
    
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical" 
		android:focusable="true" 
		android:focusableInTouchMode="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip" >

			<TextView
			    android:id="@+id/restaurant_nameTV"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/restaurant_nameString"
				android:textAppearance="?android:attr/textAppearanceMedium" />
			<EditText
			    android:id="@+id/restaurant_nameET"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.92"
			    android:singleLine="true"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip" >

			<TextView
			    android:id="@+id/restaurant_addressTV"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/restaurant_addressString"
				android:textAppearance="?android:attr/textAppearanceMedium" />
			<EditText
			    android:id="@+id/restaurant_addressET"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.92"
			    android:singleLine="true"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip" >

			<TextView
			    android:id="@+id/restaurant_cityTV"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/restaurant_cityString"
				android:textAppearance="?android:attr/textAppearanceMedium" />
			<EditText
			    android:id="@+id/restaurant_cityET"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.92"
			    android:singleLine="true"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
     
     	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip" >

			<TextView
			    android:id="@+id/restaurant_stateTV"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/restaurant_stateString"
				android:textAppearance="?android:attr/textAppearanceMedium" />
			<ListView
			    android:id="@+id/restaurant_stateLV"
			    android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_alignParentLeft="true"
        		android:layout_alignParentTop="true" />
        </LinearLayout>
        
     	<Button
     	    android:id="@+id/restaurant_verify"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:text="@string/restaurant_verifyString" 
     	    android:layout_marginTop="8dip"/>
    </LinearLayout>

</RelativeLayout>